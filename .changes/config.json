{
  "gitSiteUrl": "https://github.com/johncarmack1984/my-tauri-updater/",
  "pkgManagers": {
    "javascript": {
      "version": true,
      "getPublishedVersion": "git tag -l --sort=v:refname \"${ pkg.pkg }-v${ pkgFile.version }\" | sed s/v//",
      "publish": { "command": "echo publish", "pipe": true },
      "build": { "command": "pnpm build", "pipe": true },
      "test": [
        { "command": "pnpm build", "pipe": true },
        { "command": "pnpm test", "dryRunCommand": false },
        { "command": "echo boop", "dryRunCommand": "echo deboop" }
      ],
      "releaseTag": false
    },
    "rust": {
      "version": true,
      "getPublishedVersion": "git tag -l --sort=v:refname \"${ pkg.pkg }-v${ pkgFile.version }\" | sed s/v//",
      "publish": [
        {
          "command": "echo '<details>\n<summary><em><h4>Cargo Publish</h4></em></summary>\n\n```'",
          "dryRunCommand": true,
          "pipe": true
        },
        {
          "command": "echo '```\n\n</details>\n'",
          "dryRunCommand": true,
          "pipe": true
        }
      ],
      "postPublish": {
        "command": "cargo fetch",
        "dryRunCommand": "echo 'cargo fetch'",
        "pipe": true
      },
      "releaseTag": false
    }
  },
  "packages": {
    "frontend": {
      "manager": "javascript",
      "getPublishedVersion": "git tag -l --sort=v:refname \"app-v\" | sed s/v//",
      "path": ".",
      "releaseTag": false,
      "build": {
        "command": "pnpm build",
        "dryRunCommand": "echo 'pnpm build'",
        "pipe": true
      },
      "prePublish": {
        "command": "pnpm i && pnpm build:scripts && node .dist/set-version.mjs && pnpm i",
        "dryRunCommand": "echo 'pre publish app'",
        "pipe": true
      },
      "publish": {
        "command": "echo 'publish app'",
        "dryRunCommand": "echo 'publish app'",
        "pipe": true
      },
      "postPublish": {
        "command": "pnpm i --lockfile-only",
        "dryRunCommand": "echo 'pnpm i --lockfile-only'",
        "pipe": true
      }
    },
    "app": {
      "path": "./src-tauri",
      "releaseTag": "${ pkg.pkg }-v${ pkgFile.version }",
      "manager": "rust",
      "build": {
        "command": "cargo check",
        "pipe": true
      },
      "prePublish": {
        "command": "echo 'pre publish tauri'",
        "dryRunCommand": "echo 'pre publish tauri'",
        "pipe": true
      },
      "publish": {
        "command": "echo 'publish tauri'",
        "dryRunCommand": "",
        "pipe": true
      },
      "postPublish": {
        "command": "cargo fetch",
        "dryRunCommand": "echo 'cargo fetch'",
        "pipe": true
      },
      "dependencies": ["frontend"]
    }
  }
}
